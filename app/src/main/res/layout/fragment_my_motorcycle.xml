<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MyMotorcycleFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mymoto_text_constraint"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/mymoto_text_constraint"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/mymoto_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="25dp"
                    android:text="My Motorcycle"
                    android:textColor="@color/navy"
                    android:textSize="28sp"
                    app:layout_constraintTop_toBottomOf="@id/mymoto_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/add_motorcycle_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginVertical="20dp"
                    android:paddingHorizontal="15dp"
                    android:background="@drawable/blue_rounded_button"
                    android:drawableStart="@drawable/beige_ic_baseline_library_add_16"
                    android:text=" Add Motorcycle"
                    android:textSize="14sp"
                    android:textColor="@color/beige"
                    android:textAllCaps="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mymoto_text" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mymoto_recycle_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHeight_max="490dp"
                android:background="@color/gray"
                app:layout_constraintTop_toBottomOf="@+id/mymoto_text_constraint"
                android:scrollbars="vertical"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

</FrameLayout>