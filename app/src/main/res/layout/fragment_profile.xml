<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/profile_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Profile"
                android:textSize="28sp"
                android:textColor="@color/navy"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/profile_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:text="Name"
                android:textColor="@color/brown"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_text" />

            <EditText
                android:id="@+id/profile_name"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/brown_ic_baseline_person_16"
                android:backgroundTint="@color/navy"
                android:hint="Enter your name"
                android:textSize="14sp"
                android:textColor="@color/navy"
                android:textColorHint="@color/beige"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_name_text" />

            <TextView
                android:id="@+id/profile_email_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:text="Email"
                android:textColor="@color/brown"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_name" />

            <EditText
                android:id="@+id/profile_email"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/brown_ic_baseline_email_16"
                android:backgroundTint="@color/navy"
                android:hint="Enter your email"
                android:textSize="14sp"
                android:textColor="@color/navy"
                android:textColorHint="@color/beige"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_email_text" />

            <TextView
                android:id="@+id/profile_password_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:text="Password"
                android:textColor="@color/brown"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_email" />

            <EditText
                android:id="@+id/profile_password"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/brown_ic_baseline_lock_16"
                android:backgroundTint="@color/navy"
                android:hint="Enter your password"
                android:textSize="14sp"
                android:textColor="@color/navy"
                android:textColorHint="@color/beige"
                android:inputType="textPassword"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_password_text" />

            <TextView
                android:id="@+id/profile_address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:text="Address"
                android:textColor="@color/brown"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_password" />

            <EditText
                android:id="@+id/profile_address"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/brown_ic_baseline_location_on_16"
                android:backgroundTint="@color/navy"
                android:hint="Confirm your password"
                android:textSize="14sp"
                android:textColor="@color/navy"
                android:textColorHint="@color/beige"
                android:inputType="textPassword"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_address_text" />

            <TextView
                android:id="@+id/profile_phone_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:text="Phone"
                android:textColor="@color/brown"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_address" />

            <EditText
                android:id="@+id/profile_phone"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/brown_ic_baseline_phone_enabled_16"
                android:backgroundTint="@color/navy"
                android:hint="Confirm your password"
                android:textSize="14sp"
                android:textColor="@color/navy"
                android:textColorHint="@color/beige"
                android:inputType="textPassword"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_phone_text" />

            <Button
                android:id="@+id/register_btn"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="15dp"
                android:background="@drawable/blue_rounded_button"
                android:drawableStart="@drawable/beige_ic_baseline_person_add_alt_1_16"
                android:text=" Save"
                android:textSize="14sp"
                android:textColor="@color/beige"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_phone" />

            <ProgressBar
                android:id="@+id/loading"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</FrameLayout>